<% @post.comments.each do |comment| %>
  <div class="well">
     <p><strong><em><%= comment.name %></em></strong> : <%= comment.body %>
        <br>  <i><%= time_ago_in_words(comment.created_at) %></i>
<%= link_to 'Delete', [comment.post, comment],
                method: :delete,
                  data: {confirm: 'Do you really want to?'}%>
    </p>
  </div>
  <% end %>
