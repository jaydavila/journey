<% @post.comments.each do |comment| %>
  <div class="well">
     <p><strong><%= comment.name %></strong> : <%= comment.body %>

<%= link_to 'Delete', [comment.post, comment],
                method: :delete,
                  data: {confirm: 'Do you really want to?'}%>
    </p>
  </div>
  <% end %>
